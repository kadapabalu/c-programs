#include<stdio.h>
int main()
{
long num, reversed_num=0, remainder, original_num;
printf("Enter an integer:");
scanf("%d",&num);
original_num=num;
while(num!=0)
{
remainder=num%10;
reversed_num=reversed_num*10+remainder;
num/=10;
}
printf("Original number=%1d\n",original_num);
printf("Reversed number=%1d\n",original_num);
return 0;
}

