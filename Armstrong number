#include<stdio.h>
#include<stdbool.h>
#include<math.h>
bool isarmstrong(int n)
{
int temp=n;
int sum=0;
int k=log10(temp)+1;
while(temp>0)
{
int digit=temp%10;
sum+=pow(digit,k);
temp/=10;
}
return(sum==n);
}
int main()
{
int n=153;
if(isarmstrong(n))
{
printf("Yes,%d is an armstrong number\n",n);
}
else
{
printf("No,%d is not an armstrong number\n",n);
}
return 0;
}

OUTPUT:
Yes,153 is an armstrong number
